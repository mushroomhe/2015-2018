<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_logon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.baohui.carapp_version10.LogonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/shouji"
                android:id="@+id/register_Img_phone"
                android:layout_marginTop="25dp"/>
            <View
                android:layout_height="3px"
                android:background="#33000000"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/register_view_phone" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/register_text_phone"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-32dp"
                android:background="@null"
                android:textSize="16sp"
                android:hint="请输入手机号"
                android:textCursorDrawable="@drawable/color_cursor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/mima"
                android:id="@+id/register_Img_password"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="1dp"/>
            <View
                android:layout_height="3px"
                android:background="#33000000"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/register_view_password" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/register_text_password"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-32dp"
                android:background="@null"
                android:textSize="16sp"
                android:hint="设置登录密码，不少于6位"
                android:textCursorDrawable="@drawable/color_cursor" />
        </LinearLayout>


        <View
            android:layout_height="3px"
            android:background="#33000000"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_marginTop="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/register_view_test" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/register_button_register"
                android:layout_width="325dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_selector"
                android:orientation="horizontal"
                android:text="下一步"
                android:textSize="17sp"
                android:textColor="@color/white"
                style="?android:attr/borderlessButtonStyle"
                android:onClick="Logon_Click">
            </Button>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
